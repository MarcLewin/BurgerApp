<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
		
	        <h1>Burger App</h1>
	      
	    </div>
  	</div>


	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers You Can Eat</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Already Been Eaten</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger To Be Eaten</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <input type="text"  name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Order Burger</button>
			</form>

	    </div>
	
  	</div>


</div>